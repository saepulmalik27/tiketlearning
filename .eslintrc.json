{
    "env": {
        "browser": true,
        "es2021": true,
        "node": true
    },
    "extends": [
        "plugin:react/recommended",
        "plugin:@next/next/recommended",
        "standard",
        "prettier"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": ["react"],
    "rules": {
        "react/jsx-props-no-spreading": [
            "error",
            {
                "exceptions": ["Component"]
            }
        ],
        "@next/next/no-img-element": "off"
    },
    "settings": {
        "react": {
            "version": "17.0.2"
        }
    }
}
